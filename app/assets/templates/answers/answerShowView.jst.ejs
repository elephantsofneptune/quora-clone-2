
<div class="answer-wrapper">
  <div class="feed answer-author group">
    <% biography = !bio ? "No Bio" : bio %>
    <span class="author-avatar">
      <img src="<%= img %>" class="avatar">
    </span>
    <span class="author-info">
      <span class="author-name">
        <%= author.escape('first_name') %> <%= author.escape('last_name') %>
      </span class="author-name">
        â€¢ <%= biography %>
    </span>
  </div>

  <div class="feed answer-body">
    <%= answer.escape('body') %>
  </div>

  <div class="answer-form-footer group">
    <button class="tertiary-button show-comments"
            data-id="<%= answer.escape('id')%>">
            Comments | <%= answer.answerComments().length %>
    </button>
  </div>


  <div class="comments-to-answer group">
    <div class="new-comment-to-answer group">

    </div>
  </div>
</div>
