  </div>
  <a href="/#questions/<%= question.escape('id') %>">
    <div class="feed question-title">
      <%= question.escape('title') %>
    </div>
  </a>
  <% if (question.answers()) { %>
    <% numAnswers = question.answers().length === 1 ? 'Answer' : 'Answers'%>
