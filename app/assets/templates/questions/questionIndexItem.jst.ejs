      <div class="secondary-text">
        <%= question.answers().length%> <%= numAnswers %>
      </div>
    </a>
  <% } %>
  <div class="new-answer-to-question">

  </div>
  <div class="answer-form-footer group">
    <button class="primary-button action-bar answer-question"
            data-id="<%= question.escape('id')%>">
            Write Answer
    </button>
