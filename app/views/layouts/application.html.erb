<!DOCTYPE html>
<html>
<head>
  <title>QuoraClone</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= yield %>

  <% if logged_in? %>
    <%= current_user.email %>
  <% end %>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

</body>
</html>
